---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import LinkedInIcon from "../components/icons/LinkedIn.astro";
import GithubIcon from "../components/icons/Github.astro";
import SocialPill from "../components/SocialPill.astro";
---

<Layout title="Portafolio - Iván">
  <main>
    <section class="w-full lg:w-[740px] mx-auto py-44">
		<img src="" alt="foto" class="w-12 h-12 rounded-full mb-4" />

      <h1 class="text-white text-5xl font-bold flex flex-row gap-x-4 pb-10">
        Hey, soy Iván
        <a
          href="https://linkedin.com/in/iván-alba"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center"
        >
          <Badge> Disponible para trabajar </Badge>
        </a>
      </h1>
      <h2 class="text-2xl text-wrap">
        <span>Egresado de Ingeniería en Sistemas Computacionales. </span>
		<span class="text-yellow-200/90">Desarrollador Web y Aplicaciones Android. </span>
		<span class="text-red-100/90">De Veracruz, México. </span>
		<span class="opacity-75">Expecializado en crear aplicaciones únicas.</span>
      </h2>

      <nav class="flex gap-x-4 mt-8">
		<SocialPill href="https://linkedin.com/in/iván-alba">
			<LinkedInIcon class="h-6 w-6" />
			LinkedIn
		</SocialPill>
		<SocialPill href="https://github.com/Alba2809">
			<GithubIcon class="h-6 w-6" />
			Github
		</SocialPill>
	  </nav>
    </section>
  </main>
</Layout>
